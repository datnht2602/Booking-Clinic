@page
@model webapp.Pages.Create.Index

<main>
	<div class="container mt-5">
		<div class="card bold-border mb-5 shadow-lg">
			<div class="row no-gutters mx-4 my-3 px-5 py-4">
				<div class="col-md-6">
					<form class="p-3" asp-page="/Account/Create/Index">
						<h2 class="m-auto fw-bold text-center text-black mb-2 mx-auto p-2">SIGN UP</h2>
						<div class="row">
							<input type="hidden" asp-for="Input.ReturnUrl" />
							<div class="mb-3">
								<label class="fs-5" asp-for="Input.Name">Name<small class="text-danger">*</small></label>
								<input class="form-control" placeholder="Input Name" asp-for="Input.Name">
							</div>
							<div class="mb-3">
								<label class="fs-5" asp-for="Input.Email">Email<small class="text-danger">*</small></label>
								<input class="form-control" placeholder="name@example.com" asp-for="Input.Email" autofocus>
							</div>
							<div class="mb-3">
								<label class="fs-5" asp-for="Input.Phone">Phone Number<small class="text-danger">*</small></label>
								<input type="tel" class="form-control" placeholder="Input Phone Number" asp-for="Input.Phone">
							</div>
							<div class="mb-3">
								<label class="fs-5" asp-for="Input.Password">Password<small class="text-danger">*</small></label>
								<input type="password" class="form-control" placeholder="Input Password" asp-for="Input.Password" autocomplete="off">
							</div>
							<div class="mb-3">
								<label class="fs-5" asp-for="Input.Password">Confirm Password<small class="text-danger">*</small></label>
								<input type="password" class="form-control" placeholder="Input Confirm Password" asp-for="Input.ConfirmPassword" autocomplete="off">
							</div>
							<div class="btn-group d-flex justify-content-between py-3">
								<button class="btn btn-primary mx-5" name="Input.Button" value="create">CREATE</button>
								<button class="btn btn-primary mx-5" name="Input.Button" value="cancel">CANCEL</button>
							</div>
						</div>
					</form>
				</div>
				<div class="col-md-6">
					<img class="card-img image-left" src="img/avatar.jpg" alt="...">				
			    </div>
			</div>
		</div>
</main>
