<script src="_framework/blazor.webassembly.js"></script>
<script>navigator.serviceWorker.register('service-worker.js');</script>



<AuthorizeView Roles="admin">
    <Authorized>
        <div class="main-wrapper">
            <div class="header" style="">
                <div class="header-left">
                    <a href="/" class="logo">
                        <img src="img/logo.png" height="35" alt="4Health Clinic Booking">
                    </a>
                </div>
                <a id="toggle_btn" href="javascript:void(0);"><i class="fa-solid fa-bars"></i></a>
                <a id="mobile_btn" class="mobile_btn float-start" href="#sidebar"><i class="fa-solid fa-bars"></i></a>
                <div class="top-nav-search mob-view">
                    <form>
                        <input type="text" class="form-control" placeholder="Search here">
                        <a class="btn"><i class="fa-solid fa-magnifying-glass"></i></a>
                    </form>
                </div>
                <ul class="nav user-menu float-end">
                    <li class="nav-item dropdown d-none d-md-block">
                        <a href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown"><i class="fa-solid fa-envelope"></i><span class="pulse"></span> </a>
                        <div class="dropdown-menu notifications">
                            <div class="topnav-dropdown-header">
                                <span>Notifications</span>
                            </div>
                            <div class="drop-scroll">
                                <ul class="notification-list">
                                    <li class="notification-message">
                                        
                                    </li>

                                </ul>
                            </div>
                            <div class="topnav-dropdown-footer">
                                <a href="/">View all Notifications</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item dropdown d-none d-md-block">
                        <a href="javascript:void(0);" id="open_msg_box" class="hasnotifications nav-link"><i class="fa-solid fa-bell"></i><span class="pulse"></span> </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link user-link">
                            <div class="user-names">
                                <h5>Young Blood </h5>
                                <span>Admin</span>
                            </div>
                            <span class="user-img">
                                <img src="img/user-06.jpg" alt="Admin">
                            </span>
                        </a>
                    </li>
                </ul>
                <div class="dropdown mobile-user-menu float-end">
                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-ellipsis-vertical"></i></a>
                    <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item" href="profile.html">My Profile</a>
                        <a class="dropdown-item" href="edit-profile.html">Edit Profile</a>
                        <a class="dropdown-item" href="settings.html">Settings</a>
                        <a class="dropdown-item" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
            <div class="sidebar" id="sidebar">
                <div class="sidebar-inner slimscroll">
                    <div id="sidebar-menu" class="sidebar-menu">
                        <ul>
                            <li class="menu-title">Main</li>
                            <li class="submenu">
                                <a @onclick="@(_ => nav.NavigateTo("/admin",true))" style="cursor: pointer"><span class="menu-side"><i class="fa-solid fa-square-poll-horizontal"></i></span> <span> Dashboard </span></a>
                                <ul style="display: none;">
                                    <li><a>Admin Dashboard</a></li>

                                </ul>
                            </li>

                            <li class="submenu">
                                <a @onclick="@(_ => nav.NavigateTo("/list-product",true))" style="cursor: pointer"><span class="menu-side"><i class="fa-solid fa-hand-holding-heart"></i></span> <span> Service </span></a>
                            </li>

                            <li class="submenu">
                                <a @onclick="@(_ => nav.NavigateTo("/list-coupon",true))" style="cursor: pointer"><span class="menu-side"><i class="fa-regular fa-calendar-check"></i></span> <span> Coupons </span></a>
                            </li>

                            <li class="submenu">
                                <a @onclick="@(_ => nav.NavigateTo("/list-doctor",true))" style="cursor: pointer"><span class="menu-side"><i class="fa-solid fa-calendar-day"></i></span> <span> Doctors </span> </a>
                                @*  <ul style="display: none;">
                                <li><a href="/">Schedule List</a></li>
                                <li><a href="/">Add Schedule</a></li>
                                <li><a href="/">Edit Schedule</a></li>
                                </ul> *@
                            </li>

                            @*                             <li>
                            <a href="/"><span class="menu-side"><i class="fa-solid fa-comment-dots"></i></span> <span>Chat</span></a>
                            </li> *@

                            <li class="submenu">
                                <a @onclick="@(_ => nav.NavigateTo("/list-news",true))" style="cursor: pointer"><span class="menu-side"><i class="fa-solid fa-book-open"></i></span> <span> Blog</span></a>
                            </li>

                        </ul>
                        <div class="logout-btn">
                            <a @onclick="LogOut" style="cursor: pointer"><span class="menu-side"><i class="fa-solid fa-right-from-bracket"></i></span> <span>Logout</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Body
    </Authorized>
    <NotAuthorized>
        <div class="main-wrapper error-wrapper">
            <div class="error-box">
                <img class="img-fluid" src="/img/doctor-cannot.png" alt="Logo">
                <h2>You are not allowed to access admin page</h2>
                <button @onclick="@(_ => nav.NavigateTo($"/", true))" class="btn btn-primary"><span><i class="fa-solid fa-house"></i> Homepage</span></button>
                <button @onclick="@(_ => nav.NavigateTo($"/authentication/login", true))" class="btn btn-primary">
                    <span>
                        <i class="fa-solid fa-user"></i> Log in
                    </span>
                </button>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
@code {

    public async Task LogOut()
    {
        await SignOutManager.SetSignOutState();
        nav.NavigateTo("authentication/logout", true);
    }

}