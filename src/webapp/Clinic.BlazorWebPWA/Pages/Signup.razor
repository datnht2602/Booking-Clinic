@page "/signup"

<PageTitle>Register</PageTitle>

<main>
    <div class="bg-primary">
        <div class="container px-5 py-5 signup">
            <div>
                <div class="m-auto bg-white shadow-sm p-5 rounded-3 text-center col-lg-5 mx-auto">
                    <h3 class="fw-bold text-black mb-2">Sign Up</h3>
                    <form action="/" class="text-start pt-4">
                        <div class="row">
                            <div class="mb-3 col-6 pe-1">
                                <label for="firstName" class="form-label small text-muted">First Name<small class="text-danger">*</small></label>
                                <input type="text" class="form-control" id="firstName" placeholder="First Name" required pattern="[^\s]+" title="Please do not enter spaces.">
                            </div>
                            <div class="mb-3 col-6 ps-1">
                                <label for="lastName" class="form-label small text-muted">Last Name</label>
                                <input type="text" class="form-control" id="lastName" placeholder="Last Name" required pattern="[^\s]+" title="Please do not enter spaces.">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label small text-muted">Email Address <small class="text-danger">*</small></label>
                            <input type="email" class="form-control" placeholder="name@example.com" required pattern="[^\s]+" title="Please do not enter spaces.">
                        </div>
                        <div class="mb-3">
                            <label for="phonenumbers" class="form-label small text-muted">Phone Number<small class="text-danger">*</small></label>
                            <input type="tel" class="form-control" placeholder="Input Phone Number" required pattern="0[0-9]{9}" title="Please enter a valid phone number." oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Please enter a valid phone number without spaces.')">
                        </div>
                        <div class="mb-3 input-group align-items-center">
                            <label for="password" class="form-label small text-muted">Password <small class="text-danger">*</small></label>
                            <div class="input-group">
                                <input type="password" class="form-control" placeholder="Input Password" id="password" required pattern="[^\s]+" title="Please do not enter spaces." />
                            </div>
                        </div>
                        <div class="mb-3 input-group align-items-center">
                            <label for="confirmPassword" class="form-label small text-muted">Confirm Password <small class="text-danger">*</small></label>
                            <div class="input-group">
                                <input type="password" class="form-control" placeholder="Input Confirm Password" id="password" required pattern="[^\s]+" title="Please do not enter spaces." />
                            </div>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" value="" id="invalidCheck" required>
                            <label class="form-check-label small text-muted" for="invalidCheck">I agree to all terms and services.</label>
                        </div>
                        <button type="submit" class="btn btn-warning fw-bold fs-7 rounded-3 w-100 border-0 px-4 py-3 text-uppercase">Register</button>
                    </form>
                    <div class="d-flex align-items-center justify-content-between divide my-3">
                        <hr class="w-100">
                        <span class="text-muted small px-2">OR</span>
                        <hr class="w-100">
                    </div>
                    <div class="social-btn">
                        <a href="#" class="text-dark fw-bold">
                            <div class="d-flex align-items-center py-3 px-3 border rounded-3 mb-3">
                                <img src="img/google-icon.png" class="img-fluid social-icon" alt="Google-Icon">
                                <p class="mb-0 mx-auto">Continue with Google</p>
                            </div>
                        </a>
                    </div>
                    <p class="text-muted mb-0">Already have an account? <a href="login" class="text-mdinfo">Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</main>
